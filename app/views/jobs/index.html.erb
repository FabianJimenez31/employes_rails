<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Id company</th>
      <th>Name job</th>
      <th>Description</th>
      <th>Job available</th>
      <th>Vacancy</th>
      <th>Salary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.id_company %></td>
        <td><%= job.name_job %></td>
        <td><%= job.description %></td>
        <td><%= job.job_available %></td>
        <td><%= job.vacancy %></td>
        <td><%= job.salary %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

